<table class="table table--content table--mobile{% if table.mobile_single_column %} table--single-column {% endif %} {{ modifier_class }}">
  {% for row in table.rows %}
    <tr class="table__row table__row--{{ cycle(['odd', 'even'], loop.index0) }}">
      {% for item in row %}
        {% if table.mobile_single_column %}
          {% if loop.index == 1 %}
            <td class="table__cell">
          {% endif %}
          <div class="table__content" data-mobile-label="{{ table.headers[loop.index0] }}">
            {{ item }}
          </div>
        {% else %}
          {% if loop.index == 1 %}
            <td class="table__cell table__left">
              <div>{{ item }}</div>
            </td>
            <td class="table__cell table__right">
          {% endif %}
          {% if loop.index != 1 %}
            <div class="table__content" data-mobile-label="{{ table.headers[loop.index0] }}">
              {{ item }}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
      </td>
    </tr>
  {% endfor %}
</table>
